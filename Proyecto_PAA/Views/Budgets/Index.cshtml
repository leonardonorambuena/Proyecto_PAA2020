@model List<Proyecto_PAA.Models.Budget>
@{
    ViewBag.Title = "Presupuestos";
}

@if (Model.Count == 0)
{
    <div class="alert alert-warning">
        Aún no se han creado presupuesto, <a href="/Budgets/Create" class="btn btn-primary"><i class="fa fa-plus"></i> crea uno aqui</a>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">Presupuestos</div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Vendedor</th>
                    <th>Total</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BudgetId</td>
                            <td>@item.Author.FullName</td>
                            <td>@item.Total</td>
                            <td>@item.BudgetStateString</td>
                            <td>
                                <a href="/Budgets/edit/@item.BudgetId" class="btn btn-info btn-sm">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}



